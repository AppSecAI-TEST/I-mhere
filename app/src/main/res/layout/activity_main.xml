<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fbutton_color_belize_hole"
    android:orientation="vertical"
    tools:context="com.asergeev.imhere.activity.MainActivity">


        <Button
            android:id="@+id/angry_btn"

            android:layout_width="wrap_content"
            android:layout_height="62dp"

            android:layout_above="@+id/par"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="18dp"
            android:background="@drawable/buttonshape"
            android:text="Телефон ребенка"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            tools:layout_editor_absoluteX="55dp"
            tools:layout_editor_absoluteY="376dp" />

        <Button
            android:id="@+id/par"

            android:layout_width="wrap_content"
            android:layout_height="58dp"

            android:layout_alignLeft="@+id/angry_btn"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/angry_btn"
            android:layout_marginBottom="59dp"
            android:background="@drawable/buttonshape"
            android:text="Телефон родителя"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="310dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="275dp">

        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="13dp"
            app:srcCompat="@drawable/flat" />


</RelativeLayout>
